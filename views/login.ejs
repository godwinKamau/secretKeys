<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Login/Sign Up</title>
        <meta name="description" content="Sign Up/Login to chat!">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/logandsign.css">
    </head>
    <body class="flexTop">
        <container>
            <section class="tab flexTop">
                <h1 class="title">Log In</h1>
            </section>
            <section class="inputs flexTop">
                <section class="info flexTop">
                <form action="/login" method="post">
                    <div class="form-group signupGroup destroy">
                        <div class="signup-border">
                            <label for="email">Email</label>
                        </div>
                        <div class="signup-border">
                            <input type="text" id="email" name="email">
                        </div>
                        <div class="signup-border"></div> 
                    </div>
                    
                    
                <div class="form-group loginGroup">
                    <div class="login-border">
                        <label for="password" class="login-text">Password</label>
                    </div>
                    <div class="login-border">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="login-border"></div>
                </div>
                </section>
                <section class="buttons flexTop">
                    <button type="submit">Submit</button>
                    
                </section>
                </form>

                <section class="choices">
                        <button id="login">Login</button>
                        <div>or</div>
                        <button id="signup">Sign Up</button>
                    </section>
            </section>
            
            
        </container>
    <script type="text/javascript" src="js/logandsign.js"></script>    
    </body>
</html>