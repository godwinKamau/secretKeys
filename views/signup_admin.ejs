<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Login/Sign Up</title>
        <meta name="description" content="Sign Up/Login to chat!">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/logandsign.css">
    </head>
    <body class="flexTop">
        <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
        <container>
            <section class="tab flexTop">
                <h1 class="title">Log In</h1>
            </section>
            <section class="inputs flexTop">
                <section class="info flexTop">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <div class="signup-border">
                            <label for="email">Email</label>
                        </div>
                        <div class="signup-border">
                            <input type="text" id="email" name="email">
                        </div>
                        <div class="signup-border"></div> 
                    </div>
                    <!-- Signup/Login Stuffs -->
                    <div class="form-group">
                        <div class="login-border">
                            <label for="userName" class="login-text">Username</label>
                        </div>
                        <div class="login-border">
                            <input type="text" id="userName" name="userName">
                        </div>
                        <div class="login-border"></div> 
                    </div>
                        
                    <div class="form-group">
                        <div class="login-border">
                            <label for="password" class="login-text">Password</label>
                        </div>
                        <div class="login-border">
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div class="login-border"></div>
                    </div>
                    <div class="form-group">
                        <div class="login-border">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                        </div>
                        <div class="login-border">
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="login-border">
                            <label for="access">Pick a location</label>
                        </div>
                        <div class="login-border">
                            <select id="access" name="access">
                                <% for(let i = 0; i < locations.length; i++) { %>
                                    <option value="<%= locations[i]._id %>"><%= locations[i].siteName %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </section>
                    <section class="buttons flexTop">
                        <button type="submit">Submit</button>
                    </section>
                </form>
        </container>
    <script type="text/javascript" src="js/logandsign.js"></script>    
    </body>
</html>